    }

    .ticket .codigo {
        text-align: center;
        font-size: 16px;
        margin-bottom: 10px;
        color: #2e7d32;
    }

    .ticket .qrcode {
        text-align: center;
    }

    .ticket .qrcode img {
        max-width: 180px;
        border: 2px solid #388e3c;
        padding: 8px;
        border-radius: 8px;
        background-color: white;
    }

    .footer {
        margin-top: 20px;
        text-align: center;
        font-size: 12px;
        color: #555;
    }
</style>

