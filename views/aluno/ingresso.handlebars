    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8;
        padding: 30px;
    }

    .ticket {
        max-width: 600px;
        margin: 0 auto;
        background-color: #e1f5e0;
        border: 2px dashed #4CAF50;
        border-radius: 10px;
        padding: 20px;
        position: relative;
    }

    .ticket h1 {
        text-align: center;
        color: #2e7d32;
        font-size: 28px;
